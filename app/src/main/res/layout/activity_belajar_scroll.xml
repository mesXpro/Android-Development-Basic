<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BelajarScrollActivity">

    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/peter"
        android:scaleType="centerCrop"
        />
    <ImageView
        android:id="@+id/ivBookPicture"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:src="@drawable/spiderman"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/tvJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:text="Spider-Man : No Way Home"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/ivBookPicture"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />
    <TextView
        android:id="@+id/tvCreator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marvel"
        android:layout_below="@id/tvJudul"
        android:layout_toRightOf="@+id/ivBookPicture"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        />
    <ImageView
        android:id="@+id/ivBintang"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src="@drawable/baseline_star_24"
        android:layout_below="@+id/tvJudul"
        android:layout_toRightOf="@+id/tvCreator"
        android:layout_marginStart="20dp"
        android:layout_marginTop="14dp"
        />
    <TextView
        android:id="@+id/tvRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.5"
        android:layout_below="@+id/tvJudul"
        android:layout_toRightOf="@id/ivBintang"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="10k Reviews"
        android:layout_below="@+id/tvJudul"
        android:layout_toRightOf="@id/tvRate"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textColor="#FFFFFF"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/cvGenre"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:layout_below="@+id/ivBackground"
        android:layout_marginStart="10dp"
        android:backgroundTint="#C6E8E7"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/cvGenre2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Film Fantasi"
            android:layout_gravity="center"
            android:textSize="14sp"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cvGenre2"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:layout_below="@+id/ivBackground"
        android:layout_marginStart="20dp"
        android:layout_centerInParent="true"
        android:backgroundTint="#C6E8E7"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Petualangan"
            android:layout_gravity="center"
            android:textSize="14sp"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cvGenre3"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:layout_below="@+id/ivBackground"
        android:layout_marginStart="20dp"
        android:layout_toRightOf="@+id/cvGenre2"
        android:backgroundTint="#C6E8E7"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Film Komedi"
            android:layout_gravity="center"
            android:textSize="14sp"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tvSynopsis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Synopsis"
        android:layout_below="@+id/cvGenre"
        android:layout_marginTop="25dp"
        android:layout_marginStart="10dp"
        android:textSize="25sp"
        android:textStyle="bold"
        />
    <ScrollView
        android:id="@+id/svDescription"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/tvSynopsis"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        android:scrollbars="none"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
